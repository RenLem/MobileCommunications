<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="omy.boston.mobilecommunications.fragments.SmsFragment">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="5"
        android:ems="10"
        android:layout_below="@+id/edNumber"
        android:layout_alignParentStart="true"
        android:id="@+id/edMessage"
        android:layout_alignParentEnd="true"
        android:hint="Type some message..."
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_margin="4dp"
        android:layout_marginStart="4dp"/>

    <Button
        android:text="Send by Ap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnByAp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/edMessage"
        android:layout_toStartOf="@+id/btnDirect"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_margin="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp" />

    <Button
        android:text="Direct Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDirect"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignBaseline="@+id/btnByAp"
        android:layout_alignBottom="@+id/btnByAp"
        android:layout_alignEnd="@+id/edMessage" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/edNumber"
        android:hint="Type phone..."
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/edMessage" />
</RelativeLayout>